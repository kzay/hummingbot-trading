      "targets": [
        { "expr": "label_replace(hbot_bot_snapshot_age_seconds{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}, \"__name__\", \"snapshot_age_s\", \"\", \"\")", "refId": "A", "format": "table", "instant": true },
        { "expr": "label_replace(hbot_bot_equity_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}, \"__name__\", \"equity\", \"\", \"\")", "refId": "B", "format": "table", "instant": true },
        { "expr": "label_replace(hbot_bot_daily_pnl_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}, \"__name__\", \"pnl_today\", \"\", \"\")", "refId": "C", "format": "table", "instant": true },
        { "expr": "label_replace(hbot_bot_realized_pnl_today_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}, \"__name__\", \"realized_today\", \"\", \"\")", "refId": "D", "format": "table", "instant": true },
        { "expr": "label_replace(hbot_bot_drawdown_pct{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"} * 100, \"__name__\", \"drawdown_pct\", \"\", \"\")", "refId": "E", "format": "table", "instant": true },
        { "expr": "label_replace(hbot_bot_net_edge_pct{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"} * 10000, \"__name__\", \"net_edge_bps\", \"\", \"\")", "refId": "F", "format": "table", "instant": true },
        { "expr": "label_replace(hbot_bot_spread_pct{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"} * 10000, \"__name__\", \"spread_bps\", \"\", \"\")", "refId": "G", "format": "table", "instant": true },
        { "expr": "label_replace(hbot_bot_turnover_today_x{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}, \"__name__\", \"turnover_x\", \"\", \"\")", "refId": "H", "format": "table", "instant": true },
        { "expr": "label_replace(hbot_bot_orders_active{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}, \"__name__\", \"orders_active\", \"\", \"\")", "refId": "I", "format": "table", "instant": true },
        { "expr": "label_replace(hbot_bot_recent_error_lines{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}, \"__name__\", \"error_lines_tail\", \"\", \"\")", "refId": "J", "format": "table", "instant": true }
      ],
      "transformations": [
        { "id": "seriesToColumns", "options": { "byField": "bot" } },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time 1": true,
              "Time 2": true,
              "Time 3": true,
              "Time 4": true,
              "Time 5": true,
              "Time 6": true,
              "Time 7": true,
              "Time 8": true,
              "Time 9": true,
              "Time 10": true,
              "__name__ 1": true,
              "__name__ 2": true,
              "__name__ 3": true,
              "__name__ 4": true,
              "__name__ 5": true,
              "__name__ 6": true,
              "__name__ 7": true,
              "__name__ 8": true,
              "__name__ 9": true,
              "__name__ 10": true,
              "instance 1": true,
              "instance 2": true,
              "instance 3": true,
              "instance 4": true,
              "instance 5": true,
              "instance 6": true,
              "instance 7": true,
              "instance 8": true,
              "instance 9": true,
              "instance 10": true,
              "job 1": true,
              "job 2": true,
              "job 3": true,
              "job 4": true,
              "job 5": true,
              "job 6": true,
              "job 7": true,
              "job 8": true,
              "job 9": true,
              "job 10": true
            },
            "renameByName": {
              "bot": "Bot",
              "exchange 1": "Exchange",
              "pair 1": "Symbol",
              "variant 1": "Strategy",
              "mode 1": "Venue",
              "Value #A": "Snapshot age (s)",
              "Value #B": "Equity",
              "Value #C": "PnL today",
              "Value #D": "Realized today",
              "Value #E": "Drawdown %",
              "Value #F": "Net edge (bps)",
              "Value #G": "Spread (bps)",
              "Value #H": "Turnover (x)",
              "Value #I": "Orders active",
              "Value #J": "ERROR lines (tail)"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": { "custom": { "align": "center", "cellOptions": { "type": "auto" } } },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Bot" },
