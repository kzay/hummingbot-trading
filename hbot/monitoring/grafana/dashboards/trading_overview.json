      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 17 },
      "targets": [
        {
          "expr": "100 * avg(hbot_bot_inventory_skew_abs{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "min": 0,
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 2 }, { "color": "red", "value": 5 }] }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "values": false, "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 203,
      "type": "stat",
      "title": "Worst Margin Ratio",
      "description": "Minimum margin ratio across selected bots (only meaningful for futures/perps). Lower = closer to liquidation.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 17 },
      "targets": [
        { "expr": "min(hbot_bot_margin_ratio{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 3,
          "min": 0,
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 0.15 }, { "color": "green", "value": 0.3 }] }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "values": false, "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 204,
      "type": "stat",
      "title": "Funding Rate (max abs)",
      "description": "Maximum absolute funding rate across selected bots (perp-only).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 17 },
      "targets": [
        { "expr": "max(abs(hbot_bot_funding_rate{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}))", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "none", "decimals": 6 }, "overrides": [] },
      "options": { "reduceOptions": { "values": false, "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 205,
      "type": "timeseries",
      "title": "Exposure (Gross / Net)",
      "description": "Desk exposure proxy in quote units. Use this to enforce risk budgets and spot unexpected inventory drift.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 24, "x": 0, "y": 21 },
      "targets": [
        {
          "expr": "sum(hbot_bot_gross_exposure_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "legendFormat": "gross",
          "refId": "A"
        },
        {
          "expr": "sum(hbot_bot_exposure_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "legendFormat": "net",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "currencyUSD", "decimals": 2, "custom": { "lineWidth": 2, "fillOpacity": 8, "showPoints": "never" } },
        "overrides": [
          { "matcher": { "id": "byName", "options": "gross" }, "properties": [{ "id": "color", "value": { "mode": "fixed", "fixedColor": "orange" } }] },
          { "matcher": { "id": "byName", "options": "net" }, "properties": [{ "id": "color", "value": { "mode": "fixed", "fixedColor": "blue" } }] }
        ]
      },
      "options": { "tooltip": { "mode": "multi", "sort": "desc" }, "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["last"] } }
    },
    {
      "id": 300,
      "type": "row",
      "title": "Execution Quality",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 28 }
    },
    {
      "id": 301,
      "type": "stat",
      "title": "Cancel Rate (per min)",
      "description": "Sum of cancel-per-minute snapshots across selected bots. Spikes often indicate too-tight quoting or rapid repricing.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 29 },
      "targets": [
        { "expr": "sum(hbot_bot_cancel_per_min{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "short", "decimals": 1 }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 302,
      "type": "stat",
      "title": "Maker % (Δ $timeframe)",
      "description": "Maker share of fills over selected window (from fills.csv is_maker).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 29 },
      "targets": [
        {
          "expr": "100 * (sum(clamp_min(delta(hbot_bot_fills_maker_count{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}[$timeframe]),0)) / clamp_min(sum(clamp_min(delta(hbot_bot_fills_maker_count{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}[$timeframe]),0)) + sum(clamp_min(delta(hbot_bot_fills_taker_count{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}[$timeframe]),0)), 1))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "min": 0,
          "max": 100,
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "yellow", "value": 50 }, { "color": "green", "value": 70 }] }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 303,
      "type": "stat",
      "title": "Adverse Drift 30s (bps, Δ $timeframe)",
      "description": "Average 30s adverse drift after fills (bps) from fills.csv `adverse_drift_30s`. Higher = worse short-horizon adverse selection.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 29 },
      "targets": [
        {
          "expr": "sum(clamp_min(delta(hbot_bot_adverse_drift_30s_bps_sum{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}[$timeframe]), 0)) / clamp_min(sum(clamp_min(delta(hbot_bot_adverse_drift_30s_bps_count{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}[$timeframe]), 0)), 1)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 3 }] }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 304,
      "type": "stat",
      "title": "Order Book Stale Bots",
      "description": "Share of selected bots reporting stale order book (1=true).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 29 },
      "targets": [
        { "expr": "100 * avg(hbot_bot_order_book_stale{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent", "decimals": 1, "min": 0, "max": 100 }, "overrides": [] },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 305,
      "type": "timeseries",
      "title": "Tick Duration (ms) by Bot",
      "description": "End-to-end tick wall time. Sustained increases imply slow indicators, connector I/O, or host contention.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 33 },
      "targets": [
        {
          "expr": "1000 * hbot_bot_tick_duration_seconds{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}",
          "legendFormat": "{{bot}}",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "ms", "decimals": 0, "custom": { "lineWidth": 2, "fillOpacity": 8, "showPoints": "never" } }, "overrides": [] },
      "options": { "tooltip": { "mode": "multi", "sort": "desc" }, "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["last", "max"] } }
    },
    {
      "id": 306,
      "type": "timeseries",
      "title": "WS Reconnects (Δ $timeframe) by Bot",
      "description": "Connectivity stability proxy: delta of WS reconnect count gauge over selected window (clamped at 0).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 33 },
      "targets": [
        {
          "expr": "clamp_min(delta(hbot_bot_ws_reconnect_total{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}[$timeframe]), 0)",
