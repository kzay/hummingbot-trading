{
  "uid": "hbot-trading-overview",
  "title": "Trading Desk",
  "tags": ["hummingbot", "trading", "desk"],
  "timezone": "utc",
  "schemaVersion": 39,
  "version": 5,
  "style": "dark",
  "editable": true,
  "graphTooltip": 1,
  "liveNow": true,
  "refresh": "30s",
  "time": { "from": "now-24h", "to": "now" },
  "links": [
    {
      "title": "Bot Deep Dive",
      "type": "link",
      "url": "/d/hbot-bot-deep-dive",
      "keepTime": true,
      "includeVars": true,
      "targetBlank": false,
      "icon": "external link"
    },
    {
      "title": "Ops & Infrastructure",
      "type": "link",
      "url": "/d/hbot-cp-health",
      "keepTime": true,
      "includeVars": false,
      "targetBlank": false,
      "icon": "external link"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      },
      {
        "datasource": { "type": "loki", "uid": "loki" },
        "enable": true,
        "expr": "{job=\"bot_logs\"} |= \"kill_switch\"",
        "hide": false,
        "iconColor": "red",
        "name": "Kill Switch Events",
        "step": "60s"
      },
      {
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "enable": true,
        "expr": "increase(container_restart_count{name=~\"hbot-$bot\"}[15m]) > 0",
        "hide": false,
        "iconColor": "orange",
        "name": "Container Restart",
        "step": "60s",
        "titleFormat": "Restart"
      }
    ]
  },
  "templating": {
    "list": [
      {
        "name": "cluster",
        "label": "Cluster",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(hbot_bot_state, cluster)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "refresh": 2,
        "sort": 1,
        "current": { "text": "All", "value": ["$__all"] }
      },
      {
        "name": "environment",
        "label": "Environment",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(hbot_bot_state{cluster=~\"$cluster\"}, environment)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "refresh": 2,
        "sort": 1,
        "current": { "text": "All", "value": ["$__all"] }
      },
      {
        "name": "account",
        "label": "Account",
        "description": "Operationally maps to bot credentials. Today this is equivalent to `bot` (no first-class `account` label yet).",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(hbot_bot_state{cluster=~\"$cluster\",environment=~\"$environment\"}, bot)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "refresh": 2,
        "sort": 1,
        "current": { "text": "All", "value": ["$__all"] }
      },
      {
        "name": "bot",
        "label": "Bot",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(hbot_bot_state{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$account\"}, bot)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "refresh": 2,
        "sort": 1,
        "current": { "text": "All", "value": ["$__all"] }
      },
      {
        "name": "exchange",
        "label": "Exchange",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(hbot_bot_state{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\"}, exchange)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "refresh": 2,
        "sort": 1,
        "current": { "text": "All", "value": ["$__all"] }
      },
      {
        "name": "symbol",
        "label": "Symbol",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(hbot_bot_state{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\"}, pair)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "refresh": 2,
        "sort": 1,
        "current": { "text": "All", "value": ["$__all"] }
      },
      {
        "name": "strategy",
        "label": "Strategy",
        "description": "Maps to the Prometheus label `variant` (strategy variant / role).",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(hbot_bot_state{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\"}, variant)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "refresh": 2,
        "sort": 1,
        "current": { "text": "All", "value": ["$__all"] }
      },
      {
        "name": "venue",
        "label": "Venue",
        "description": "Maps to the Prometheus label `mode` (paper/live).",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(hbot_bot_state{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\"}, mode)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "refresh": 2,
        "sort": 1,
        "current": { "text": "All", "value": ["$__all"] }
      },
      {
        "name": "regime",
        "label": "Regime",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "query": "label_values(hbot_bot_state{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\"}, regime)",
        "includeAll": true,
        "multi": true,
        "allValue": ".+",
        "refresh": 2,
        "sort": 1,
        "current": { "text": "All", "value": ["$__all"] }
      },
      {
        "name": "timeframe",
        "label": "Timeframe",
        "type": "custom",
        "query": "5m,15m,1h",
        "current": { "text": "15m", "value": "15m" }
      }
    ]
  },
  "panels": [
    {
      "id": 100,
      "type": "row",
      "title": "Desk Health",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 }
    },
    {
      "id": 1,
      "type": "stat",
      "title": "Bots Running",
      "description": "How many bots currently report state=running (one-hot gauge).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "sum(hbot_bot_state{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\",state=\"running\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "green", "value": 1 }] }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"] },
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal"
      }
    },
    {
      "id": 8,
      "type": "stat",
      "title": "Uptime (Healthy)",
      "description": "Percent of selected bot series that are RUNNING and have fresh minute.csv (snapshot_age < 90s). Use this as a desk uptime proxy.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "targets": [
        {
          "expr": "avg(hbot_bot_running_fresh{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "decimals": 0,
          "min": 0,
          "max": 1,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 0.9 },
              { "color": "green", "value": 0.98 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"] },
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Equity (Desk)",
      "description": "Sum of `equity_quote` across selected bots/symbols.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "targets": [
        {
          "expr": "sum(hbot_bot_equity_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "currencyUSD", "decimals": 2, "color": { "mode": "fixed", "fixedColor": "blue" } },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"] },
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "PnL Today (MTM)",
      "description": "Daily mark-to-market PnL from equity_open→equity_now derived by exporter.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "sum(hbot_bot_daily_pnl_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "green", "value": 0 }] }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"] },
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "center"
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Realized PnL Today",
      "description": "Realized PnL from fills (quote units).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "targets": [
        {
          "expr": "sum(hbot_bot_realized_pnl_today_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "green", "value": 0 }] }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"] },
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 5,
      "type": "stat",
      "title": "Max Drawdown",
      "description": "Maximum drawdown across selected bots (percent).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "targets": [
        {
          "expr": "max(hbot_bot_drawdown_pct{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "min": 0,
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "red", "value": 3 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "values": false, "calcs": ["lastNotNull"] },
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "center"
      }
    },
    {
      "id": 9,
      "type": "stat",
      "title": "Gross Exposure",
      "description": "Desk gross exposure proxy in quote units (sum(abs(position_base)*mid)).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 5 },
      "targets": [
        {
          "expr": "sum(hbot_bot_gross_exposure_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "currencyUSD", "decimals": 0 }, "overrides": [] },
      "options": { "reduceOptions": { "values": false, "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 10,
      "type": "stat",
      "title": "Net Exposure",
      "description": "Desk net exposure proxy in quote units (sum(position_base*mid)). Positive = net long.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 5 },
      "targets": [
        {
          "expr": "sum(hbot_bot_exposure_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "currencyUSD", "decimals": 0 }, "overrides": [] },
      "options": { "reduceOptions": { "values": false, "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 11,
      "type": "stat",
      "title": "Fills (Δ $timeframe)",
      "description": "New fills over selected window (delta of fills.csv row-count gauge; clamped at 0 to ignore restarts).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 5 },
      "targets": [
        {
          "expr": "sum(clamp_min(delta(hbot_bot_fills_total{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}[$timeframe]), 0))",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "short", "decimals": 0 }, "overrides": [] },
      "options": { "reduceOptions": { "values": false, "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 12,
      "type": "stat",
      "title": "Fees (Δ $timeframe)",
      "description": "Fees paid over selected window (delta of total fee gauge; clamped at 0 to ignore restarts).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 5 },
      "targets": [
        {
          "expr": "sum(clamp_min(delta(hbot_bot_total_fees_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}[$timeframe]), 0))",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "currencyUSD", "decimals": 4 }, "overrides": [] },
      "options": { "reduceOptions": { "values": false, "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 13,
      "type": "stat",
      "title": "Slippage vs Mid (bps, Δ $timeframe)",
      "description": "Average fill price vs mid_ref (bps). Positive = worse-than-mid execution for the bot; negative = better-than-mid.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 5 },
      "targets": [
        {
          "expr": "sum(clamp_min(delta(hbot_bot_fill_slippage_bps_sum{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}[$timeframe]), 0)) / clamp_min(sum(clamp_min(delta(hbot_bot_fill_slippage_bps_count{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"}[$timeframe]), 0)), 1)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0 }, { "color": "red", "value": 2 }] }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "values": false, "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 14,
      "type": "stat",
      "title": "Errors / min (Δ $timeframe)",
      "description": "ERROR log line rate from Loki (bot logs). This is a desk incident intensity signal.",
      "datasource": { "type": "loki", "uid": "loki" },
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 5 },
      "targets": [
        {
          "expr": "60 * sum(rate({job=\"bot_logs\", bot=~\"$bot\"} |~ \"ERROR\" [$timeframe]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 1,
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 5 }] }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "values": false, "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Equity (Desk)",
      "description": "Desk equity over time (sum across selected bots).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 9 },
      "targets": [
        {
          "expr": "sum(hbot_bot_equity_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "legendFormat": "equity",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "custom": { "lineWidth": 2, "fillOpacity": 10, "showPoints": "never" },
          "color": { "mode": "fixed", "fixedColor": "blue" }
        },
        "overrides": []
      },
      "options": { "tooltip": { "mode": "single" }, "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["last"] } }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "PnL Today (Desk, MTM)",
      "description": "Desk daily MTM PnL over time (sum across selected bots).",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 9 },
      "targets": [
        {
          "expr": "sum(hbot_bot_daily_pnl_quote{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "legendFormat": "pnl",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 2,
          "custom": { "lineWidth": 2, "fillOpacity": 15, "showPoints": "never" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "transparent", "value": 0 }] }
        },
        "overrides": []
      },
      "options": { "tooltip": { "mode": "single" }, "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["last"] } }
    },
    {
      "id": 200,
      "type": "row",
      "title": "Risk",
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 16 }
    },
    {
      "id": 201,
      "type": "stat",
      "title": "Position Drift (max %)",
      "description": "Max divergence between local vs exchange position (percent). This is a critical risk integrity signal.",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 17 },
      "targets": [
        {
          "expr": "100 * max(hbot_bot_position_drift_pct{cluster=~\"$cluster\",environment=~\"$environment\",bot=~\"$bot\",exchange=~\"$exchange\",pair=~\"$symbol\",variant=~\"$strategy\",mode=~\"$venue\",regime=~\"$regime\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "min": 0,
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1 }, { "color": "red", "value": 5 }] }
        },
        "overrides": []
      },
      "options": { "reduceOptions": { "values": false, "calcs": ["lastNotNull"] }, "textMode": "value", "colorMode": "value", "graphMode": "none", "justifyMode": "center" }
    },
    {
      "id": 202,
      "type": "stat",
      "title": "Inventory Skew (avg abs %)",
