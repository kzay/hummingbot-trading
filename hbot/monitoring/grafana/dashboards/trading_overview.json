      "fieldConfig": { "defaults": { "unit": "short", "decimals": 0, "custom": { "drawStyle": "bars", "lineWidth": 1, "fillOpacity": 35, "showPoints": "never", "barAlignment": 0 } }, "overrides": [] },
      "options": { "tooltip": { "mode": "multi", "sort": "desc" }, "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["sum", "max"] } }
    },
    {
      "id": 400,
      "type": "row",
      "title": "Strategy KPIs",
      "collapsed": false,
