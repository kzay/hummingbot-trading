# ============================================================
# hbot — Environment Variables Template
# Copy to .env and fill in real values before starting.
# NEVER commit .env to git.
# ============================================================

# ── Bitget API (main account — bot1 default) ────────────────
BITGET_API_KEY=
BITGET_SECRET=
BITGET_PASSPHRASE=

# ── Per-bot API overrides (leave blank to inherit global) ───
BOT2_BITGET_API_KEY=
BOT2_BITGET_SECRET=
BOT2_BITGET_PASSPHRASE=

BOT3_BITGET_API_KEY=
BOT3_BITGET_SECRET=
BOT3_BITGET_PASSPHRASE=

# ── Kill-switch API (read+trade, NO withdrawal permissions) ─
# Use a separate sub-account API key so the kill-switch can
# cancel orders even if the main bot key is rate-limited.
KILL_SWITCH_API_KEY=
KILL_SWITCH_SECRET=
KILL_SWITCH_PASSPHRASE=
KILL_SWITCH_DRY_RUN=true     # set to false when tested on testnet

# ── Redis ────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=              # leave blank for no-auth local dev
REDIS_CONSUMER_GROUP=hb_group_v1

# ── Postgres ─────────────────────────────────────────────────
POSTGRES_USER=hbot
POSTGRES_PASSWORD=changeme
POSTGRES_DB=hbot_ops
OPS_DB_PASSWORD=changeme

# ── Bot instance passwords (Hummingbot config encryption) ───
BOT1_PASSWORD=
BOT2_PASSWORD=
BOT3_PASSWORD=
BOT4_PASSWORD=

# ── Reconciliation ───────────────────────────────────────────
# Set to true once BITGET_API_KEY is configured.
RECON_EXCHANGE_SOURCE_ENABLED=false

# ── ML signal service ────────────────────────────────────────
ML_ENABLED=false
ML_RUNTIME=sklearn_joblib     # sklearn_joblib | onnx | http
ML_MODEL_URI=                 # file:// or s3:// or http:// path
ML_CONFIDENCE_MIN=0.60
ML_FEATURE_SET=v1

# ── Alerting ─────────────────────────────────────────────────
# Slack incoming webhook URL for critical trade alerts.
# Leave blank to use internal webhook-sink only.
SLACK_WEBHOOK_URL=
SLACK_ALERT_CHANNEL=#trading-alerts

# ── Grafana ─────────────────────────────────────────────────
GF_SECURITY_ADMIN_PASSWORD=admin   # change before exposing externally

# ── ClickHouse (optional analytics — disabled by default) ───
CLICKHOUSE_PASSWORD=

# ── Day-2 gate tuning ────────────────────────────────────────
DAY2_GATE_MIN_HOURS=9
DAY2_GATE_MAX_DELTA=5
DAY2_GATE_SKIP_INTEGRITY_REFRESH=false

# ── Prometheus / ports ──────────────────────────────────────
REDIS_BIND_IP=127.0.0.1
KILL_SWITCH_HTTP_PORT=9900
